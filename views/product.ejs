<script>
  function changeImage(clickedImageId, newSrc) {
    const mainImage = document.getElementById('mainImage');
    const clickedImage = document.getElementById(clickedImageId);
    const tempSrc = mainImage.src;
    mainImage.src = newSrc;
    clickedImage.src = tempSrc;
  }

  var swiper = new Swiper('.swiper-container', {
    slidesPerView: 1,
    spaceBetween: 10,
    pagination: {
      el: '.swiper-pagination',
      clickable: true,
    },
  });

  addToCart();
  function selectColor(color) {
    const dots = document.querySelectorAll('.color-dot');
    dots.forEach(dot => {
      dot.classList.remove('border-2', 'border-gray-800');
    });
    event.target.classList.add('border-2', 'border-gray-800');
  }

  const sizeButtons = document.querySelectorAll('.size-btn');
  sizeButtons.forEach(button => {
    button.addEventListener('click', function () {
      sizeButtons.forEach(btn => btn.classList.remove('border-gray-800'));
      this.classList.add('border-gray-800');
    });
  });
</script>
