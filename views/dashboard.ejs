<%- include('./partials/Header.ejs', {hidden: true}) %>
<% if(typeof error !== 'undefined') { %>
<div class="flash fixed inset-0 flex justify-center items-center ">
    <p class="text-red-600 rounded py-1 px-4 h-fit w-fit bg-gray-200 text-lg md:text-2xl lg:text-2xl"><%= error[0] %></p>
</div>
<% } %> 
  
<% if (success?.length > 0) { %>
    <div class="bg-green-200 text-green-800 p-2 rounded mb-4"><%= success[0] %></div>
<% } %>  

<body class="bg-gray-100">
    <!-- Navbar -->
    <nav class="text-black p-4">
        <div class="container mx-auto flex justify-between items-center">
            <a href="#" class="text-2xl font-bold">Admin Panel</a>
            <a href="/logout" class="text-sm">Logout</a>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mx-auto mt-8">
        <div class="flex flex-col md:flex-row">

            <!-- Sidebar -->
            <div class="w-full md:w-1/4 bg-gray-200 p-4">
                <h2 class="text-lg font-semibold mb-4">Navigation</h2>
                <ul>
                    <li><a href="#" class="block py-2 px-4 bg-gray-300 mb-2 rounded">Dashboard</a></li>
                    <li><a href="/seller/plusproducts" class="block py-2 px-4 bg-gray-300 mb-2 rounded">Products</a></li>
                        <li><a href="/orders/all" class="block py-2 px-4 bg-gray-300 mb-2 rounded">Orders</a></li>
                </ul>
            </div>

            <!-- Main Content Area -->
            <div class="w-full md:w-3/4 p-4 relative">
                <h2 class="text-2xl font-semibold mb-4">Upload Clothing Product</h2>
                <form action="/seller/push" method="POST" enctype="multipart/form-data">
                    <div class="mb-4">
                        <label for="title" class="block mb-2">Title</label>
                        <input type="text" id="title" name="title" class="w-full px-4 py-2 border rounded" required>
                    </div>

                    <div class="mb-4">
                        <label for="description" class="block mb-2">Description</label>
                        <textarea id="description" name="description" rows="4" class="w-full px-4 py-2 border rounded" required></textarea>
                    </div>
            
                    <div class="mb-4">
                        <label for="price" class="block mb-2">Price</label>
                        <input type="text" id="price" name="price" class="w-full px-4 py-2 border rounded" required>
                    </div>

                    <div class="mb-4">
                        <label for="gender" class="block mb-2">Gender</label>
                        <select id="gender" name="gender" class="w-full px-4 py-2 border rounded" required>
                            <option value="boy">Boy</option>
                            <option value="girl">Girl</option>
                            <option value="unisex">Unisex</option>
                        </select>
                    </div>

                    <div class="mb-4">
                        <label for="color" class="block mb-2">Color</label>
                        <input type="text" id="color" placeholder="If multiple colors, use comma between colors" name="color" class="w-full px-4 py-2 border rounded" required>
                    </div>

                    <div class="mb-4">
                        <label for="category" class="block mb-2">Category</label>
                        <input type="text" id="category" name="category" class="w-full px-4 py-2 border rounded" required>
                    </div>

                    <div class="imagcontainer flex flex-col md:flex-row gap-4 w-full mb-2">
                        <!-- Image 1 -->
                        <div class="flex-1">
                            <div class="block mb-1">Main Image</div>
                            <label class="cursor-pointer w-full bg-white text-gray-400 hover:text-black transition-all duration-300 rounded-md border p-2 flex flex-col items-center justify-center">
                                <span class="upload-text">Upload</span>
                                <input type="file" name="images" accept="image/*" required class="imageInput hidden w-full">
                                <img class="preview w-full h-40 object-cover mt-2 hidden rounded">
                            </label>
                        </div>

                        <!-- Image 2 -->
                        <div class="flex-1">
                            <label class="block mb-1">Image 2</label>
                            <label class="cursor-pointer w-full bg-white text-gray-400 hover:text-black transition-all duration-300 rounded-md border p-2 flex flex-col items-center justify-center">
                                <span class="upload-text">Upload</span>
                                <input type="file" name="images" accept="image/*" required class="imageInput hidden w-full">
                                <img class="preview w-full h-40 object-cover mt-2 hidden rounded">
                            </label>
                        </div>

                        <!-- Image 3 -->
                        <div class="flex-1">
                            <label class="block mb-1">Image 3</label>
                            <label class="cursor-pointer w-full bg-white text-gray-400 hover:text-black transition-all duration-300 rounded-md border p-2 flex flex-col items-center justify-center">
                                <span class="upload-text">Upload</span>
                                <input type="file" name="images" accept="image/*" required class="imageInput hidden w-full">
                                <img class="preview w-full h-40 object-cover mt-2 hidden rounded">
                            </label>
                        </div>

                        <!-- Image 4 -->
                        <div class="flex-1">
                            <label class="block mb-1">Image 4</label>
                            <label class="cursor-pointer w-full bg-white text-gray-400 hover:text-black transition-all duration-300 rounded-md border p-2 flex flex-col items-center justify-center">
                                <span class="upload-text">Upload</span>
                                <input type="file" name="images" accept="image/*" required class="imageInput hidden w-full">
                                <img class="preview w-full h-40 object-cover mt-2 hidden rounded">
                            </label>
                        </div>

                        <!-- Image 5 -->
                        <div class="flex-1">
                            <label class="block mb-1">Image 5</label>
                            <label class="cursor-pointer w-full bg-white text-gray-400 hover:text-black transition-all duration-300 rounded-md border p-2 flex flex-col items-center justify-center">
                                <span class="upload-text">Upload</span>
                                <input type="file" name="images" accept="image/*" required class="imageInput hidden w-full">
                                <img class="preview w-full h-40 object-cover mt-2 hidden rounded">
                            </label>
                        </div>
                    </div>
                    <input type="submit" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded" value="Upload">
                </form>

                <!-- for image preview -->
                <script>
                    const fileInputs = document.querySelectorAll('.imageInput');
                    const previews = document.querySelectorAll('.preview');
                    const uploadTexts = document.querySelectorAll('.upload-text');

                    fileInputs.forEach((input, index) => {
                        input.addEventListener('change', function() {
                        const file = input.files[0];
                        const preview = previews[index];       
                        const uploadText = uploadTexts[index];

                        if(file){
                            const reader = new FileReader();
                            reader.onload = function(e){
                                preview.src = e.target.result;
                                preview.classList.remove('hidden');
                                uploadText.classList.add('hidden');
                            }
                            reader.readAsDataURL(file);
                        } else {
                            preview.classList.add('hidden');
                            uploadText.classList.remove('hidden');
                        }
                        });
                    });
                </script>
            </div>

        </div>
    </div>
</body>

</html>
<%- include('./partials/Footer.ejs') %>
<script defer src="/_vercel/insights/script.js"></script>