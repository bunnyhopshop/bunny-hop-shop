<%- include('./partials/Header.ejs', {hidden: true}) %>
<body class="bg-gray-100">
    <!-- Navbar -->
    <nav class="bg-[#FFFFF0] text-black p-4">
        <div class="container mx-auto flex justify-between items-center">
            <a href="#" class="text-2xl font-bold">Admin Panel</a>
            <a href="/logout" class="text-sm">Logout</a>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mx-auto mt-8">
        <div class="flex flex-col md:flex-row">

            <!-- Sidebar -->
            <div class="w-full md:w-1/4 bg-gray-200 p-4">
                <h2 class="text-lg font-semibold mb-4">Navigation</h2>
                <ul>
                    <li><a href="/seller/dashboard" class="block py-2 px-4 bg-gray-300 mb-2 rounded">Dashboard</a></li>
                    <li><a href="/seller/plusproducts" class="block py-2 px-4 bg-gray-300 mb-2 rounded">Products</a></li>
                    <li><a href="/orders/all" class="block py-2 px-4 bg-gray-300 mb-2 rounded">Orders</a></li>
                </ul>
            </div>

            <!-- Main Content Area -->
            <div class="w-full md:w-3/4 p-4 relative">
                <h2 class="text-2xl font-semibold mb-4">Your Products</h2>
                <div class="mt-6 grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 lg:grid-cols-3 xl:gap-x-8">
                    <% products.forEach((fit) => { %>
                    <div class="group relative flex flex-col">
                      <div    class="aspect-h-1 aspect-w-1 w-full overflow-hidden rounded-md bg-gray-200 lg:aspect-none group-hover:opacity-75 lg:h-80">
                        <img onclick="window.location.href='/products/<%=fit._id%>'" src="<%= fit.mainImage %>" alt="Product Image" class="h-full w-full object-cover object-center lg:h-full lg:w-full">
                      </div>
                      <div class="mt-4 flex justify-between">
                        <div>
                          <h3 class="text-sm text-gray-700">
                            <a href="/products/<%= fit.id %>">
                              <span aria-hidden="true" class="absolute inset-0"></span>
                              <%= fit.title %>
                            </a>
                          </h3>
                          <% if (fit.color && Array.isArray(fit.color)) { %>
                            <% for (let j = 0; j < fit.color.length; j++) { %>
                              <span class="color-dot mt-4 inline-block h-4 w-4 rounded-full" style="background-color: <%= fit.color[j] %>; margin-right: 4px;"></span>
                            <% } %>
                          <% } %>
                        </div>
                        <p class="text-sm font-medium text-gray-900">PKR <%= fit.price %></p>
                      </div>
<div class="mt-auto flex gap-2 items-center sm:space-y-0 sm:space-x-2 sm:flex-row">
  <% if(fit.isApproved) { %>
    <button
      type="button"
      class="relative z-10 w-1/2 bg-green-500 text-white py-2 px-4 rounded-md shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
      Approved
    </button>
    <button
      type="button"
      data-id="<%= fit._id %>"
      class="relative z-10 w-1/2 prod-delete bg-red-500 text-white py-2 px-4 rounded-md shadow-sm hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
      Delete
    </button>
  <% } else { %>
    <button
      type="button"
      class="relative z-10 w-full mt-5 bg-red-500 text-white py-2 px-4 rounded-md shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
      Pending
    </button>
  <% } %>
</div>

                    </div>
                    <% }) %>
                  </div>
            </div>





        </div>


    </div>
            <div id="confirmModal" class="absolute h-full hidden w-full top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 f flex inset-0  items-center justify-center bg-black/40">
  <div class="bg-white rounded-lg shadow-lg p-6 w-full max-w-sm">
    <h3 class="text-lg font-semibold mb-2">Delete product?</h3>
    <p class="text-sm text-gray-600 mb-4">
      Are you sure you want to delete this product? This action cannot be undone.
    </p>
    <div class="flex justify-end gap-3">
      <button id="cancelDelete"
              class="px-4 py-2 rounded-md bg-gray-200 text-gray-800 text-sm">
        Cancel
      </button>
      <button id="confirmDelete"
              class="px-4 py-2 rounded-md bg-red-500 text-white text-sm">
        Yes, delete
      </button>
    </div>
  </div>
</div>
<script>
  document.addEventListener('DOMContentLoaded', () => {
    const deleteButtons = document.querySelectorAll('.prod-delete');

    const modal = document.getElementById('confirmModal');
    const cancelBtn = document.getElementById('cancelDelete');
    const confirmBtn = document.getElementById('confirmDelete');

    let pendingDelete = { id: null, card: null };

    deleteButtons.forEach(btn => {
      btn.addEventListener('click', (e) => {
        e.stopPropagation();
        const id = btn.dataset.id;
        const card = btn.closest('.group');

        pendingDelete = { id, card };
        modal.classList.remove('hidden');
        modal.classList.add('flex');
      });
    });

    cancelBtn.addEventListener('click', () => {
      modal.classList.add('hidden');
      modal.classList.remove('flex');
      pendingDelete = { id: null, card: null };
    });

    confirmBtn.addEventListener('click', async () => {
      if (!pendingDelete.id) return;

      try {
        const res = await fetch(`/seller/products/${pendingDelete.id}`, {
          method: 'DELETE',
          headers: { 'Content-Type': 'application/json' }
        });

        if (!res.ok) throw new Error('Delete failed');

        pendingDelete.card.remove();
      } catch (err) {
        alert('Error deleting product. Try again.');
        console.error(err);
      } finally {
        modal.classList.add('hidden');
        modal.classList.remove('flex');
        pendingDelete = { id: null, card: null };
      }
    });
  });
</script>


</body>


</html>


</html>

  
