  </div>
  <div class="page2 h-full">
    <div
      class="max-w-full h-fit bg-[#FFFFF0] sm:px-6 sm:py-8 lg:max-w-8xl lg:px-8"
    >
      <h1
        class="text-2xl max-sm:text-2xl max-sm:px-6 tracking-tight text-gray-900 text-4xl"
      >
        Trending <span class="text-[#800020]">Outfits</span>
      </h1>

      <div
        class="mt-10 ml-6 grid grid-cols-1 gap-x-2 gap-y-10 sm:grid-cols-2 lg:grid-cols-4 max-sm:mt-0 max-sm:ml-0 max-sm:py-6"
      >
        <% trendy.forEach((fit) => { %>
        <div class="group relative h-[80%] w-[85%] max-sm:mx-auto scroll-card">
          <div
            class="aspect-h-1 aspect-w-1 w overflow-hidden rounded-md bg-gray-200 lg:aspect-none group-hover:opacity-75 lg:h-80"
          >
            <img
              onclick="window.location.href='products/<%= fit._id%>'"
              src="<%=fit.mainImage%>"
              alt="outfit image"
              class="h-full w-full object-cover object-center lg:h-full lg:w-full"
            />
          </div>
          <div class="mt-4 flex justify-between">
            <div>
              <h3 class="text-lg text-gray-700 lg:h-28 xl:h-16 xl:w-56">
                <a href="/products/<%=fit._id%>">
                  <span aria-hidden="true" class="absolute"></span>
                  <%= fit.title%>
                </a>
              </h3>
              <p class="">
                <% if (fit.color && Array.isArray(fit.color)) { %> <% for (let j
                = 0; j < fit.color.length; j++) { %>
                <span
                  class="color-dot mt-4 inline-block h-4 w-4 rounded-full"
                  style="
                    background-color: <%= fit.color[j] %>;
                    margin-right: 4px;
                  "
                ></span>
                <% } %> <% } %>
              </p>
            </div>
            <p class="text-2xl font-medium text-gray-900">$<%= fit.price%></p>
          </div>
          <div
            class="box h-12 max-sm:h-10 w-full bg-black flex items-center mt-2"
          >
            <button
              data-fitId="<%=fit._id%>"
              class="w-full h-full bg-slate-500 text-white flex gap-2 items-center justify-center add-btn"
            >
              <i class="c-icon ri-shopping-cart-2-line"></i> Add to cart
            </button>
          </div>
        </div>
        <%})%>
      </div>
    </div>
  </div>
  <div class="page3 h-screen w-full flex flex-col md:flex-row">
