<script>
    const year = new Date().getFullYear();
    document.getElementById("copyright").textContent = `© ${year} BunnyHop. All Rights Reserved.`;

    // Header Logic Inline since we removed the convoluted tailwind logic
    const searchBtn = document.getElementById('searchButton');
    const searchBar = document.getElementById('searchBar');
    if (searchBtn && searchBar) {
        searchBtn.addEventListener('click', () => {
            searchBar.style.display = searchBar.style.display === 'none' ? 'block' : 'none';
        });
    }

    const toggleOpen = document.getElementById('toggleOpen');
    const toggleClose = document.getElementById('toggleClose');
    const collapseMenu = document.getElementById('collapseMenu');

    if (toggleOpen && toggleClose && collapseMenu) {
        toggleOpen.addEventListener('click', () => collapseMenu.style.display = 'block');
        toggleClose.addEventListener('click', () => collapseMenu.style.display = 'none');
    }
    // Scroll Animation Observer
    const observerOptions = {
        threshold: 0.1,
        rootMargin: "0px 0px -50px 0px"
    };

    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.classList.add('active');
            }
        });
    }, observerOptions);

    document.querySelectorAll('.reveal, .reveal-stagger').forEach(el => {
        observer.observe(el);
    });
</script>

